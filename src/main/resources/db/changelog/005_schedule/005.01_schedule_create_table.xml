<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="mborodin" id="005.01">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="schedule"/>
            </not>
        </preConditions>
        <createTable tableName="schedule">
            <column name="id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="subject_id" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="study_group_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="lesson_number" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="day_of_week" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="week_number" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="auditory" type="VARCHAR(50) CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci">
                <constraints nullable="true"/>
            </column>
            <column name="subject_name" type="VARCHAR(50) CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci">
                <constraints nullable="true"/>
            </column>
            <column name="teacher_name" type="VARCHAR(50) CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>